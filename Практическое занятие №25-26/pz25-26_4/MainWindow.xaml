        <Button x:Name="marking" Content="Отметить" HorizontalAlignment="Left" Margin="470,75,0,0" VerticalAlignment="Top" Width="155" Click="MarkAttendance_Click_1"/>
        <Button x:Name="inform" Content="Создать отчет" HorizontalAlignment="Left" Margin="470,125,0,0" VerticalAlignment="Top" Width="155" Click="GenerateReport_Click_1"/>
        <Button Content="Очистить" HorizontalAlignment="Left" Margin="470,175,0,0" VerticalAlignment="Top" Width="155" Click="Clear_Click_1"/>

    </Grid>
</Window>
