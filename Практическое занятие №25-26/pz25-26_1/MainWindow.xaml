<Window x:Class="Пз25_26._1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Пз25_26._1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <ComboBox x:Name="StudentTypeComboBox" Margin="5">
                <ComboBoxItem Content="Школьник"/>
                <ComboBoxItem Content="Студент университета"/>
            </ComboBox>
            <Button Content="Показать студента" Click="ShowStudentButton_Click" Margin="5"/>
            <TextBlock Text="{Binding Name}" Margin="5"/>
            <TextBlock Text="{Binding Age}" Margin="5"/>
        </StackPanel>
    </Grid>
</Window>
